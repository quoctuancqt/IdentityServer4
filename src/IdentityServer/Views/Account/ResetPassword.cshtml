@model ResetPasswordViewModel

<div class="login-page">
    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Reset Password</h3>
                </div>
                <div class="panel-body">
                    <form asp-route="ResetPassword">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(x => x.Token)
                        @Html.HiddenFor(x => x.UserId)
                        <fieldset>
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input type="password" class="form-control" placeholder="New Password" asp-for="Password" autofocus>
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword"></label>
                                <input type="password" class="form-control" placeholder="Confirm Password" asp-for="ConfirmPassword" autofocus="off">
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary" name="button" value="Reset Password">Reset Password</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>